<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/main_actionbar_ll_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_iv_back"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:contentDescription="TODO"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back"
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/toolbar_tv_title"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:text="@string/app_name" />

        <ImageView
            android:id="@+id/toolbar_iv_search"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_search"
            android:visibility="gone"
            tools:visibility="visible" />

        <RelativeLayout
            android:id="@+id/toolbar_rl_cart"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/ic_cart"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/toolbar_tv_cart_noti"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/shape_oval_solid_0aa2e8"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textSize="8dp"
                android:visibility="gone"
                tools:text="10"
                tools:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toolbar_rl_setting"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/ic_setting"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/toolbar_tv_setting_noti"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/shape_oval_solid_0aa2e8"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textSize="8dp"
                android:visibility="gone"
                tools:text="3"
                tools:visibility="visible" />

        </RelativeLayout>
    </LinearLayout>
</layout>